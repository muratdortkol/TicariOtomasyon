@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.SatisID</td>
            <td>@u.Urun.UrunAd</td>
            <td>@u.Cariler.CariAd @u.Cariler.CariSoyad</td>
            <td>@u.Personel.PersonelAd @u.Personel.PersonelSoyad</td>
            <td>@u.Adet</td>
            <td>@u.Fiyat</td>
            <td>@u.ToplamTutar</td>
            <td>@u.Tarih</td>
            <td><a href="/Satis/SatisGetir/@u.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@u.SatisID" class="btn btn-success" style="background-color:cornflowerblue">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>


