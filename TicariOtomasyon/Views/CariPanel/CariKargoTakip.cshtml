@using TicariOtomasyon.Models.Siniflar
@model List<KargoTakip>
@{
    ViewBag.Title = "CariKargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}


<h2>Cari Kargo Takip</h2>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>AÇIKLAMA</th>
        <th>TARİH</th>

    </tr>
    @{int sira = 0; }
    @foreach (var x in Model)
    {
        <tr>
            <td>@{sira++;}@sira</td>
            <td>@x.Aciklama</td>
            <td>@x.TarihZaman</td>
        </tr>
    }
</table>