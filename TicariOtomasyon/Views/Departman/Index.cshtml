@using TicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>       
        <th>DEPARTMAN ADI</th>       
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.DepartmanID</td>
            <td>@u.DepartmanAd</td>
            <td>
                <a href="/Departman/DepartmanSil/@u.DepartmanID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@u.DepartmanID" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanDetay/@u.DepartmanID" class="btn btn-success" style="background-color:cornflowerblue">Detaylar</a>
            </td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>