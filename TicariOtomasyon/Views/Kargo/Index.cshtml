@using TicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kargo Detayları</h2>
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Kargo Takip No</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Personel</td>
            <td>@u.Alici</td>
            <td>@u.Tarih</td>
            <td>@u.TakipKodu</td>


            <td>
                <a href="/Kargo/KargoTakip/@u.TakipKodu" class="btn btn-success" style="background-color:cornflowerblue">Detaylar</a>
            </td>
        </tr>
    }
</table>
<a href="/Kargo/YeniKargo" class="btn btn-info">Yeni Kargo Girişi</a>